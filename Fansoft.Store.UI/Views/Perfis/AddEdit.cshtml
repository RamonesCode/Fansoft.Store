@model PerfilAddEditVM
@{
    var id = ViewContext.RouteData.Values["id"]?.ToString();
    ViewBag.Title = (id == null ? "Adicionar" : "Editar");
    ViewBag.SubTitle = (id == null ? "Adicionar novo Perfil" : $"Editar Perfil {id}");
}

<form method="post">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" autofocus>
        <span asp-validation-for="Nome" class="invalid"></span>
    </div>

    <div>
        <a class="btn btn-outline-warning" asp-action="Index" asp-controller="Perfis">Voltar</a>
        <button class="btn btn-outline-secondary" type="submit">Salvar</button>
    </div>


</form>

@section scripts {
    <partial name="_ScriptsValidate">
}