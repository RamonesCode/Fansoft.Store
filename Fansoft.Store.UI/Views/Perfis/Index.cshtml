@model IEnumerable<PerfilIndexVM>
@{
    ViewBag.Title = "Listagem de Perfis";
    ViewBag.SubTitle = "Aplicação teste criada em sala de aula";
}

<div>
    <a asp-action="AddEdit" asp-controller="Perfis" class="btn btn-outline-secondary">Adicionar Perfil</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Data Cadastro</th>
            <th>Usuários</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr id="item-@item.Id">
            <td>@item.Nome</td>
            <td>@item.DataCadastro.ToShortDateString()</td>
            <td>@item.Usuarios</td>
            <td>
                <a class="btn btn-outline-success btn-sm"
                   asp-action="AddEdit" asp-controller="Perfis"
                   asp-route-id="@item.Id">Editar</a>
                <button class="btn btn-outline-danger btn-sm" onclick="excluir(@item.Id, '@item.Nome', 'Perfil', '@Url.Action("Excluir", "Perfis")')">
                    Excluir
                </button>
            </td>
        </tr>
        }
    </tbody>
</table>


<partial name="_modalDel">

@section scripts {
    <script src="~/js/del-modal.js"></script>
}